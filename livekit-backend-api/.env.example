# Server Configuration
PORT=3001
NODE_ENV=development

# LiveKit Configuration
LIVEKIT_API_KEY=your-api-key-here
LIVEKIT_API_SECRET=your-api-secret-here
LIVEKIT_URL=ws://localhost:7880

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://livekit:changeme_local_dev_only@localhost:5432/livekit_conference

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AWS/S3 Configuration (for LocalStack in development)
AWS_REGION=us-east-1
S3_BUCKET=livekit-recordings
S3_ENDPOINT=http://localhost:4566
S3_ACCESS_KEY=test
S3_SECRET_KEY=test
S3_FORCE_PATH_STYLE=true

